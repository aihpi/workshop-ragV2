import { theme } from '../theme';
import React, { useState, useRef } from 'react';
import { searchDocuments, RetrievedChunk } from '../services/api';

interface RAGChatState {
  messages: any[];
  query: string;
  isStreaming: boolean;
  showParameters: boolean;
  currentChunks: any[];
  currentAnswer: string;
  enableChatHistory: boolean;
  maxTokens: number;
  relevanceThreshold: number;
  topN: number;
  topK: number;
  temperature: number;
  topP: number;
}

interface RetrievedPassagesProps {
  ragChatState: RAGChatState;
  setRagChatState: React.Dispatch<React.SetStateAction<RAGChatState>>;
}

const RetrievedPassages: React.FC<RetrievedPassagesProps> = ({ ragChatState, setRagChatState }) => {
  const [localQuery, setLocalQuery] = useState('');
  const [chunks, setChunks] = useState<RetrievedChunk[]>([]);
  const [isLoading, setIsLoading] = useState(false);
  const [showMetadata, setShowMetadata] = useState(true);
  const inputRef = useRef<HTMLTextAreaElement>(null);

  const { topK, relevanceThreshold, showParameters } = ragChatState;

  const handleResetParameters = () => {
    setRagChatState(prev => ({
      ...prev,
      topK: 10,
      relevanceThreshold: 0.0,
      topN: 3,
      maxTokens: 300,
      temperature: 0.7,
      topP: 0.9,
    }));
  };

  const handleSearch = async () => {
    if (!localQuery.trim() || isLoading) return;

    setIsLoading(true);
    try {
      const results = await searchDocuments(localQuery, topK, relevanceThreshold);
      setChunks(results);
    } catch (error) {
      console.error('Search error:', error);
      alert('Error searching documents. Please try again.');
    } finally {
      setIsLoading(false);
    }
  };

  const handleSubmit = (e: React.FormEvent) => {
    e.preventDefault();
    handleSearch();
  };

  const getScoreColor = (score: number) => {
    if (score >= 0.8) return theme.colors.layout.primary;
    if (score >= 0.6) return '#d97706';
    if (score >= 0.4) return theme.colors.accent.primary;
    return '#6b7280';
  };

  const getScoreLabel = (score: number) => {
    if (score >= 0.8) return 'Excellent';
    if (score >= 0.6) return 'Good';
    if (score >= 0.4) return 'Fair';
    return 'Poor';
  };

  return (
    <div style={{ display: 'flex', flexDirection: 'column', height: '100%', position: 'relative' }}>
      <div style={{ 
        flex: 1,
        overflowY: 'auto',
        padding: '16px 24px',
        marginBottom: '16px'
      }}>
        {chunks.length === 0 && !isLoading && (
          <div style={{ 
            display: 'flex', 
            alignItems: 'center', 
            justifyContent: 'center',
            height: '200px',
            color: theme.colors.text.tertiary,
            fontSize: '16px'
          }}>
            Enter a search query to retrieve relevant passages
          </div>
        )}

        {isLoading && (
          <div style={{ 
            display: 'flex', 
            alignItems: 'center', 
            justifyContent: 'center',
            height: '200px',
            color: theme.colors.text.secondary,
            fontSize: '16px'
          }}>
            Searching...
          </div>
        )}

        {chunks.length > 0 && !isLoading && (
          <div>
            <h3 style={{ margin: '0 0 16px 0', color: theme.colors.text.primary }}>
              Retrieved Passages ({chunks.length} results)
            </h3>
            
            <div style={{ display: 'flex', flexDirection: 'column', gap: '16px' }}>
              {chunks.map((chunk, index) => (
                <div
                  key={chunk.document_id + '-' + chunk.chunk_index}
                  style={{
                    border: \`1px solid \${theme.colors.text.quaternary}\`,
                    borderRadius: '8px',
                    padding: '16px',
                    backgroundColor: theme.colors.white
                  }}
                >
                  <div style={{ 
                    display: 'flex', 
                    justifyContent: 'space-between', 
                    alignItems: 'center',
                    marginBottom: '12px',
                    paddingBottom: '8px',
                    borderBottom: \`1px solid \${theme.colors.text.quaternary}\`
                  }}>
                    <div style={{ display: 'flex', alignItems: 'center', gap: '12px' }}>
                      <span style={{ 
                        fontWeight: 'bold',
                        color: theme.colors.text.primary
                      }}>
                        Passage #{index + 1}
                      </span>
                      <span style={{
                        padding: '4px 8px',
                        borderRadius: '4px',
                        fontSize: '12px',
                        fontWeight: 'bold',
                        color: theme.colors.white,
                        backgroundColor: getScoreColor(chunk.score)
                      }}>
                        {getScoreLabel(chunk.score)} ({chunk.score.toFixed(3)})
                      </span>
                    </div>
                    
                    {showMetadata && chunk.filename && (
                      <span style={{
                        fontSize: '12px',
                        color: theme.colors.text.tertiary,
                        fontFamily: 'monospace'
                      }}>
                        üìÑ {chunk.filename}
                      </span>
                    )}
                  </div>

                  <div style={{
                    lineHeight: '1.6',
                    color: theme.colors.text.primary,
                    marginBottom: showMetadata ? '12px' : '0'
                  }}>
                    {chunk.content}
                  </div>

                  {showMetadata && (
                    <div style={{
                      padding: '12px',
                      backgroundColor: theme.colors.highlight.quaternary,
                      borderRadius: '6px',
                      fontSize: '12px'
                    }}>
                      <strong>Metadata:</strong>
                      <div style={{ 
                        marginTop: '8px',
                        display: 'grid',
                        gridTemplateColumns: 'repeat(auto-fit, minmax(150px, 1fr))',
                        gap: '8px'
                      }}>
                        <div>
                          <span style={{ fontWeight: 'bold', color: theme.colors.text.primary }}>
                            Document ID:
                          </span>{' '}
                          <span style={{ color: theme.colors.text.tertiary }}>
                            {chunk.document_id}
                          </span>
                        </div>
                        <div>
                          <span style={{ fontWeight: 'bold', color: theme.colors.text.primary }}>
                            Chunk Index:
                          </span>{' '}
                          <span style={{ color: theme.colors.text.tertiary }}>
                            {chunk.chunk_index}
                          </span>
                        </div>
                        <div>
                          <span style={{ fontWeight: 'bold', color: theme.colors.text.primary }}>
                            Filename:
                          </span>{' '}
                          <span style={{ color: theme.colors.text.tertiary }}>
                            {chunk.filename}
                          </span>
                        </div>
                        {chunk.metadata && Object.entries(chunk.metadata).map(([key, value]) => (
                          <div key={key}>
                            <span style={{ fontWeight: 'bold', color: theme.colors.text.primary }}>
                              {key}:
                            </span>{' '}
                            <span style={{ color: theme.colors.text.tertiary }}>
                              {typeof value === 'object' ? JSON.stringify(value) : String(value)}
                            </span>
                          </div>
                        ))}
                      </div>
                    </div>
                  )}
                </div>
              ))}
            </div>

            <div style={{
              marginTop: '16px',
              padding: '12px',
              backgroundColor: theme.colors.highlight.quaternary,
              border: \`1px solid \${theme.colors.layout.primary}\`,
              borderRadius: '6px',
              fontSize: '14px',
              color: theme.colors.text.primary
            }}>
              <strong>Search Summary:</strong> Found {chunks.length} passages. 
              Average score: {(chunks.reduce((sum, c) => sum + c.score, 0) / chunks.length).toFixed(3)}.
              Top score: {Math.max(...chunks.map(c => c.score)).toFixed(3)}.
            </div>
          </div>
        )}
      </div>

      <form onSubmit={handleSubmit} style={{ 
        padding: '16px 24px',
        borderTop: \`1px solid \${theme.colors.text.quaternary}\`,
        backgroundColor: theme.colors.white
      }}>
        <div style={{ display: 'flex', gap: '8px', alignItems: 'flex-start' }}>
          <button
            type="button"
            onClick={() => setRagChatState(prev => ({ ...prev, showParameters: !prev.showParameters }))}
            data-tooltip="Toggle Parameters"
            style={{
              padding: '12px',
              backgroundColor: theme.colors.white,
              border: \`1px solid \${theme.colors.text.quaternary}\`,
              borderRadius: '6px',
              cursor: 'pointer',
              fontSize: '18px',
              color: theme.colors.text.secondary,
              transition: 'all 0.2s ease',
              flexShrink: 0,
            }}
          >
            ‚öôÔ∏è
          </button>
          
          <textarea
            ref={inputRef}
            value={localQuery}
            onChange={(e) => setLocalQuery(e.target.value)}
            onKeyDown={(e) => {
              if (e.key === 'Enter' && !e.shiftKey) {
                e.preventDefault();
                handleSearch();
              }
            }}
            placeholder="Enter your search query..."
            rows={1}
            style={{
              flex: 1,
              padding: '12px',
              border: \`1px solid \${theme.colors.text.quaternary}\`,
              borderRadius: '6px',
              fontSize: '14px',
              fontFamily: theme.fonts.family,
              resize: 'none',
              minHeight: '44px',
              maxHeight: '200px',
              overflow: 'auto',
              backgroundColor: theme.colors.white,
              color: theme.colors.text.primary
            }}
          />
          
          <button
            type="submit"
            disabled={!localQuery.trim() || isLoading}
            style={{
              padding: '12px 24px',
              backgroundColor: isLoading ? theme.colors.text.tertiary : theme.colors.accent.primary,
              color: theme.colors.white,
              border: 'none',
              borderRadius: '6px',
              cursor: isLoading ? 'not-allowed' : 'pointer',
              fontSize: '14px',
              fontWeight: theme.fonts.weight.bold,
              transition: 'all 0.2s ease',
              flexShrink: 0,
            }}
          >
            {isLoading ? 'Searching...' : 'Send'}
          </button>
        </div>

        {showParameters && (
          <div style={{
            marginTop: '12px',
            padding: '16px',
            backgroundColor: theme.colors.highlight.quaternary,
            borderRadius: '6px',
            border: \`1px solid \${theme.colors.text.quaternary}\`
          }}>
            <div style={{ 
              display: 'flex', 
              justifyContent: 'space-between', 
              alignItems: 'center',
              marginBottom: '16px'
            }}>
              <h4 style={{ margin: 0, fontSize: '14px', fontWeight: theme.fonts.weight.bold, color: theme.colors.text.primary }}>
                Search Parameters
              </h4>
              <button
                type="button"
                onClick={handleResetParameters}
                style={{
                  padding: '6px 12px',
                  backgroundColor: theme.colors.text.secondary,
                  color: theme.colors.white,
                  border: 'none',
                  borderRadius: '4px',
                  cursor: 'pointer',
                  fontSize: '12px',
                  fontWeight: theme.fonts.weight.bold,
                }}
              >
                Reset
              </button>
            </div>
            
            <div style={{ display: 'grid', gridTemplateColumns: 'repeat(auto-fit, minmax(200px, 1fr))', gap: '16px' }}>
              <div>
                <label style={{ 
                  display: 'block', 
                  marginBottom: '8px', 
                  fontSize: '12px',
                  color: theme.colors.text.secondary,
                  fontWeight: theme.fonts.weight.bold
                }}>
                  Top K Results: {topK}
                </label>
                <input
                  type="range"
                  min="1"
                  max="50"
                  value={topK}
                  onChange={(e) => setRagChatState(prev => ({ ...prev, topK: Number(e.target.value) }))}
                  style={{ width: '100%', accentColor: theme.colors.layout.primary }}
                />
              </div>

              <div>
                <label style={{ 
                  display: 'block', 
                  marginBottom: '8px', 
                  fontSize: '12px',
                  color: theme.colors.text.secondary,
                  fontWeight: theme.fonts.weight.bold
                }}>
                  Score Threshold: {relevanceThreshold.toFixed(2)}
                </label>
                <input
                  type="range"
                  min="0"
                  max="1"
                  step="0.05"
                  value={relevanceThreshold}
                  onChange={(e) => setRagChatState(prev => ({ ...prev, relevanceThreshold: Number(e.target.value) }))}
                  style={{ width: '100%', accentColor: theme.colors.layout.primary }}
                />
              </div>

              <div>
                <label style={{ 
                  display: 'flex', 
                  alignItems: 'center', 
                  gap: '8px', 
                  fontSize: '12px',
                  color: theme.colors.text.secondary,
                  fontWeight: theme.fonts.weight.bold
                }}>
                  <input
                    type="checkbox"
                    checked={showMetadata}
                    onChange={(e) => setShowMetadata(e.target.checked)}
                    style={{ accentColor: theme.colors.layout.primary }}
                  />
                  Show Metadata
                </label>
              </div>
            </div>
          </div>
        )}
      </form>
    </div>
  );
};

export default RetrievedPassages;
